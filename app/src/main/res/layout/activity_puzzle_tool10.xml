<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleTool10">

    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="482dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/imgTrowel"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/trowel"/>

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_below="@+id/textView1"
            android:layout_toLeftOf="@+id/imv2"
            android:layout_toStartOf="@+id/imv2"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv2"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv4"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv3"
            android:layout_toLeftOf="@+id/imv5"
            android:layout_toStartOf="@+id/imv5"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv5"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv4"
            android:layout_toLeftOf="@+id/imv6"
            android:layout_toStartOf="@+id/imv6"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv6"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imv5"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imW"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imgTrowel"
            android:layout_toLeftOf="@+id/imgTrowel"
            android:layout_toStartOf="@+id/imgTrowel"
            app:srcCompat="@drawable/w"/>

        <ImageView
            android:id="@+id/imV"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imgTrowel"
            android:layout_toEndOf="@+id/imgTrowel"
            android:layout_toRightOf="@+id/imgTrowel"
            app:srcCompat="@drawable/v"/>

        <ImageView
            android:id="@+id/imF"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/imW"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imW"
            android:layout_marginBottom="22dp"
            app:srcCompat="@drawable/f"/>

        <ImageView
            android:id="@+id/imU"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/imV"
            android:layout_alignStart="@+id/imV"
            android:layout_alignTop="@+id/imF"
            app:srcCompat="@drawable/u"/>

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv1"
            android:layout_toLeftOf="@+id/imgTrowel"
            android:layout_toStartOf="@+id/imgTrowel"
            android:text="T"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv2"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:text="R"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv3"
            android:layout_toEndOf="@+id/textView2"
            android:layout_toRightOf="@+id/textView2"
            android:text="O"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toEndOf="@+id/imgTrowel"
            android:layout_toRightOf="@+id/imgTrowel"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv6"
            android:layout_toEndOf="@+id/textView5"
            android:layout_toRightOf="@+id/textView5"
            android:text="L"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
