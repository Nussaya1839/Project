<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleAnimal2">

    <RelativeLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgPig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/pig" />

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv2"
            android:layout_toLeftOf="@+id/imgPig"
            android:layout_toStartOf="@+id/imgPig" />

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_above="@+id/imgPig"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="37dp" />

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv2"
            android:layout_toRightOf="@+id/imgPig"
            android:layout_toEndOf="@+id/imgPig" />


        <ImageView
            android:id="@+id/imA"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imgPig"
            android:layout_toLeftOf="@+id/imgPig"
            android:layout_toStartOf="@+id/imgPig"
            app:srcCompat="@drawable/a" />

        <ImageView
            android:id="@+id/imE"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_below="@+id/imgPig"
            android:layout_toEndOf="@+id/imgPig"
            android:layout_toRightOf="@+id/imgPig"
            app:srcCompat="@drawable/e" />

        <ImageView
            android:id="@+id/imO"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@+id/imgPig"
            android:layout_toStartOf="@+id/imgPig"
            app:srcCompat="@drawable/o" />

        <ImageView
            android:id="@+id/imI"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/imE"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imE"
            app:srcCompat="@drawable/i" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="P"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/imv1"
            android:layout_alignRight="@+id/imv1"
            android:layout_alignEnd="@+id/imv1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="G"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:layout_alignBaseline="@+id/textView"
            android:layout_alignBottom="@+id/textView"
            android:layout_alignRight="@+id/imv3"
            android:layout_alignEnd="@+id/imv3" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
