<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleAnimal3">

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="491dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgBird"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/bird" />

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3" />

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/imv4"
            android:layout_marginEnd="13dp"
            android:layout_marginRight="13dp"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imv4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imv2"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imA"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/a"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_below="@+id/imgBird"
            android:layout_toLeftOf="@+id/imgBird"
            android:layout_toStartOf="@+id/imgBird" />

        <ImageView
            android:id="@+id/imE"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/e"
            android:layout_below="@+id/imgBird"
            android:layout_toRightOf="@+id/imgBird"
            android:layout_toEndOf="@+id/imgBird" />

        <ImageView
            android:id="@+id/imO"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/imA"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imA"
            app:srcCompat="@drawable/o" />

        <ImageView
            android:id="@+id/imI"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignLeft="@+id/imE"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imE"
            app:srcCompat="@drawable/i" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="B"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="66dp"
            android:layout_marginTop="14dp"
            android:layout_alignTop="@+id/imv1"
            android:layout_alignRight="@+id/imv1"
            android:layout_alignEnd="@+id/imv1" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="R"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignRight="@+id/imv3"
            android:layout_alignEnd="@+id/imv3" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="D"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
