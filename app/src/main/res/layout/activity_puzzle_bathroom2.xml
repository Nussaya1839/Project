<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleBathroom2">

    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="482dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgSoap"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/soap" />

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="45dp"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3" />

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv4"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4" />

        <ImageView
            android:id="@+id/imv4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imv2"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imB"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/b"
            android:layout_below="@+id/imgSoap"
            android:layout_alignLeft="@+id/textView1"
            android:layout_alignStart="@+id/textView1" />

        <ImageView
            android:id="@+id/imF"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/f"
            android:layout_below="@+id/imgSoap"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="23dp"
            android:layout_marginEnd="23dp" />

        <ImageView
            android:id="@+id/imP"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/p"
            android:layout_below="@+id/imB"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2" />

        <ImageView
            android:id="@+id/imL"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/l"
            android:layout_below="@+id/imF"
            android:layout_alignLeft="@+id/imF"
            android:layout_alignStart="@+id/imF" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="S"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="39dp"
            tools:layout_editor_absoluteY="66dp"
            android:layout_alignTop="@+id/imv1"
            android:layout_alignRight="@+id/imv1"
            android:layout_alignEnd="@+id/imv1"
            android:layout_marginTop="14dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="O"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="137dp"
            tools:layout_editor_absoluteY="66dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="A"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            tools:layout_editor_absoluteX="500dp"
            tools:layout_editor_absoluteY="66dp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4" />


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
