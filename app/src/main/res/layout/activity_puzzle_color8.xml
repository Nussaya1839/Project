<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleColor8">

    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="482dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47000003"
        app:layout_constraintHorizontal_bias="0.5">

        <ImageView
            android:id="@+id/imgPurple"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/purple"/>

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_below="@+id/textView1"
            android:layout_toLeftOf="@+id/imv2"
            android:layout_toStartOf="@+id/imv2"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv2"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv4"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv3"
            android:layout_toLeftOf="@+id/imv5"
            android:layout_toStartOf="@+id/imv5"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv5"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imv4"
            android:layout_toLeftOf="@+id/imv6"
            android:layout_toStartOf="@+id/imv6"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imv6"
            android:layout_width="50dp"
            android:layout_height="55dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imv5"
            app:srcCompat="@drawable/box"/>

        <ImageView
            android:id="@+id/imA"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_below="@+id/imgPurple"
            android:layout_marginTop="17dp"
            android:layout_toLeftOf="@+id/imgPurple"
            android:layout_toStartOf="@+id/imgPurple"
            app:srcCompat="@drawable/a"/>

        <ImageView
            android:id="@+id/imE"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignTop="@+id/imA"
            android:layout_toEndOf="@+id/imgPurple"
            android:layout_toRightOf="@+id/imgPurple"
            app:srcCompat="@drawable/e"/>

        <ImageView
            android:id="@+id/imR"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/imA"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imA"
            app:srcCompat="@drawable/r"/>

        <ImageView
            android:id="@+id/imL"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_alignLeft="@+id/imE"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/imE"
            app:srcCompat="@drawable/l"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv1"
            android:layout_toLeftOf="@+id/textView2"
            android:layout_toStartOf="@+id/textView2"
            android:text="P"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_alignLeft="@+id/imgPurple"
            android:layout_alignStart="@+id/imgPurple"
            android:text="U"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv4"
            android:layout_alignEnd="@+id/imgPurple"
            android:layout_alignRight="@+id/imgPurple"
            android:text="P"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBaseline="@+id/textView6"
            android:layout_alignBottom="@+id/textView6"
            android:layout_toLeftOf="@+id/textView6"
            android:layout_toStartOf="@+id/textView6"
            android:text="L"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/imv6"
            android:layout_toEndOf="@+id/imE"
            android:layout_toRightOf="@+id/imE"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="22sp"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
