<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgg"
    tools:context="com.example.ss.gameforkids.PuzzleBody6">

    <RelativeLayout
        android:layout_width="322dp"
        android:layout_height="482dp"
        android:layout_marginLeft="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent">

        <ImageView
            android:id="@+id/imgFace"
            android:layout_width="180dp"
            android:layout_height="180dp"
            app:srcCompat="@drawable/face"
            android:layout_below="@+id/imv1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="28dp"/>

        <ImageView
            android:id="@+id/imv1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imv2"
            android:layout_toStartOf="@+id/imv2"
            android:layout_marginTop="23dp"/>

        <ImageView
            android:id="@+id/imv2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3"/>

        <ImageView
            android:id="@+id/imv3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/box"
            android:layout_alignTop="@+id/imv4"
            android:layout_toLeftOf="@+id/imv4"
            android:layout_toStartOf="@+id/imv4"/>

        <ImageView
            android:id="@+id/imv4"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/imv2"
            app:srcCompat="@drawable/box" />

        <ImageView
            android:id="@+id/imG"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/g"
            android:layout_below="@+id/imgFace"
            android:layout_alignLeft="@+id/imv1"
            android:layout_alignStart="@+id/imv1"/>

        <ImageView
            android:id="@+id/imC"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/c"
            android:layout_below="@+id/imgFace"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <ImageView
            android:id="@+id/imD"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/d"
            android:layout_below="@+id/imG"
            android:layout_alignLeft="@+id/imG"
            android:layout_alignStart="@+id/imG"/>

        <ImageView
            android:id="@+id/imK"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/k"
            android:layout_below="@+id/imC"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

        <TextView
            android:id="@+id/textView1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="F"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignTop="@+id/imv1"
            android:layout_alignRight="@+id/imG"
            android:layout_alignEnd="@+id/imG"
            android:layout_marginTop="14dp"/>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="A"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView1"
            android:layout_alignBottom="@+id/textView1"
            android:layout_toLeftOf="@+id/imv3"
            android:layout_toStartOf="@+id/imv3"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:text="E"
            android:textColor="@android:color/black"
            android:textSize="30sp"
            android:layout_alignBaseline="@+id/textView2"
            android:layout_alignBottom="@+id/textView2"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>
